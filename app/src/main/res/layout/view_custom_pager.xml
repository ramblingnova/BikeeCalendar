<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/view_custom_pager_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bikeeBlack">

        <ImageView
            android:id="@+id/view_custom_pager_prev_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow_l" />

        <TextView
            android:id="@+id/view_custom_pager_year_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/view_custom_pager_prev_image_view"
            android:textColor="@color/bikeeWhite" />

        <ImageView
            android:id="@+id/view_custom_pager_next_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/view_custom_pager_year_month"
            android:src="@drawable/icon_arrow_r" />

        <RelativeLayout
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_custom_pager_prev_image_view">

            <TextView
                android:id="@+id/sun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sun"
                android:textColor="@color/bikeeWhite" />

            <TextView
                android:id="@+id/mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/sun"
                android:text="mon"
                android:textColor="@color/bikeeWhite" />

            <TextView
                android:id="@+id/tue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/mon"
                android:text="tue"
                android:textColor="@color/bikeeWhite" />

            <TextView
                android:id="@+id/wed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tue"
                android:text="wed"
                android:textColor="@color/bikeeWhite" />

            <TextView
                android:id="@+id/thu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/wed"
                android:text="thu"
                android:textColor="@color/bikeeWhite" />

            <TextView
                android:id="@+id/fri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/thu"
                android:text="fri"
                android:textColor="@color/bikeeWhite" />

            <TextView
                android:id="@+id/sat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/fri"
                android:text="sat"
                android:textColor="@color/bikeeWhite" />
        </RelativeLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_custom_pager_title" />
</RelativeLayout>